@Library('org.jenkinsci.plugins.workflow.job.WorkflowJobDSL:2.39') _

import org.jenkinsci.plugins.workflow.job.WorkflowJobDSL

pipeline {
    agent any
    
    tools {
        nodejs 'node18'
    }
    
    parameters {
        string(name: 'name', defaultValue: '', description: 'Nom et prénom de l\'utilisateur')
    }

    stages {
        stage('Git-Pull') {
            steps {
                 git 'https://github.com/Vandal-William/GitHub-jenkins-project.git'
            }
        }
        stage('install') {
            steps {
                sh 'npm i'
                sh 'npm run build'
                dir('app') {
                    sh 'npm i' 
                }
            }
        }
        stage('Create New Job') {
            steps {
                script {
                    def jobName = "${env.JOB_NAME}_${params.name}"
                    def jobConfig = Jenkins.instance.getItem(env.JOB_NAME).getConfigFile().asString()
                    def newJob = WorkflowJobDSL.newJob(jobName)
                    newJob.definition = jobConfig
                    newJob.save()
                }
            }
        }
        // stage('Copy Job Content') {
        //     steps {
        //         script {
        //             def srcJob = Jenkins.instance.getItemByFullName(env.JOB_NAME)
        //             def destJob = Jenkins.instance.getItemByFullName("${env.JOB_NAME}_${params.name}")
        //             destJob.updateByXml(srcJob.getConfigFile().dom)
        //         }
        //     }
        // }
    
    }

    
    post {
        success {
            sh 'echo sucess'
            // Ici, vous pouvez ajouter des étapes supplémentaires à effectuer après le succès de la construction
        }

        failure {
            // Ici, vous pouvez ajouter des étapes supplémentaires à effectuer en cas d'échec de la construction
            sh 'echo Erreur'
        }
    }
}
